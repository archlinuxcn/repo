pkgname=julia-git-colors-git
pkgver=0.12.8.0.23.g219f387
pkgrel=1
pkgdesc="Colors.jl"
url="https://github.com/JuliaGraphics/Colors.jl"
arch=('any')
license=('MIT')
makedepends=(git julia-pkg-scripts)
depends=(julia-git)
provides=(julia-git-colors)
source=(git://github.com/JuliaGraphics/Colors.jl)
md5sums=('SKIP')

pkgver() {
  cd Colors.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd Colors.jl

  . /usr/lib/julia/julia-install-pkg.sh Colors "${pkgdir}" "${pkgname}" julia-git
}
