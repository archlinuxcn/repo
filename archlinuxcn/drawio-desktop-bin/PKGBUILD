_pkgname=drawio-desktop
pkgname=drawio-desktop-bin
pkgver=21.3.7
pkgrel=1
pkgdesc='Diagram drawing application built on web technology'
arch=('x86_64')
url='https://github.com/jgraph/drawio'
license=('Apache')
depends=(
  'desktop-file-utils'
  'libnotify'
  'libxss'
  'libxtst'
  'nss'
)
provides=(${_pkgname})
conflicts=(${_pkgname})
source=(
  "https://github.com/jgraph/drawio-desktop/releases/download/v${pkgver}/drawio-amd64-${pkgver}.deb"
)
sha256sums=('2c60da0552618ab2abde1b04179e25316f953c4737328fc71a4f301c87185b72')

prepare() {
  tar xfv data.tar.xz
}

package() {
  cp -rp "${srcdir}/opt" "${pkgdir}"
  cp -rp "${srcdir}/usr" "${pkgdir}"
}
