# Contributor: Megumi fox <megumifox@archlinuxcn.org>

_pkgname=drawio-desktop
pkgname=drawio-desktop-bin
pkgver=11.1.1
pkgrel=1
pkgdesc='Diagram drawing application built on web technology'
arch=('x86_64')
url='https://github.com/jgraph/drawio'
license=('Apache')
depends=(
  'desktop-file-utils'
  'gconf'
  'libnotify'
  'libxss'
  'libxtst'
  'nss'
)
provides=(${_pkgname})
conflicts=(${_pkgname})
source=(
  "https://github.com/jgraph/drawio-desktop/releases/download/v${pkgver}/draw.io-amd64-${pkgver}.deb"
  'https://github.com/jgraph/drawio-desktop/raw/master/LICENSE')
sha256sums=('70017ae190b15f5db4dd00f4dca6cf39a2160373d58ab00821f750b7b47a2173'
            'b40930bbcf80744c86c46a12bc9da056641d722716c378f5659b9e555ef833e1')

prepare() {
  tar xfv data.tar.xz
}

package() {
  cp -rp "${srcdir}/opt" "${pkgdir}"
  cp -rp "${srcdir}/usr" "${pkgdir}"
  install -Dm644 "${srcdir}/LICENSE" -t "${pkgdir}/usr/share/licenses/${pkgname}"
  # move icon to correct location
  mv "${pkgdir}/usr/share/icons/hicolor/0x0/apps/draw.io.png" "${pkgdir}/usr/share/icons"
  rm -rfv "${pkgdir}/usr/share/icons/hicolor"
}
# vim:set ts=2 sw=2 et:
