_pkgname=libclang-py3
pkgname=python-libclang
pkgver=3.9.0
pkgrel=1.2
pkgdesc="Python3 bindings for libclang"
arch=('any')
url="https://bitbucket.org/Anteru/python3-libclang"
license=('License')
depends=('python' 'python-setuptools')
source=('https://files.pythonhosted.org/packages/aa/73/d0cc2b5e896bf6ea152b2324d00963ec6b0b116bb5ed672018c0bacd97c0/libclang-py3-3.9.0.tar.gz')
md5sums=('a5421513084f8880b6b1ff73d6202e18')

build() {
  cd "$srcdir/$_pkgname-$pkgver"
  LANG=en_US.UTF-8 python3 setup.py build
}

package() {
  cd "$srcdir/$_pkgname-$pkgver"
  LANG=en_US.UTF-8 python3 setup.py install --root=$pkgdir --optimize=1 --skip-build
}

