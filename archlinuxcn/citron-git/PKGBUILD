_pkgname=citron
pkgname=citron-git
pkgver=0.8.0.r28.gb85fd5f
pkgrel=1
pkgdesc="Nintendo Switch emulator forked from yuzu."
arch=(x86_64)
url=https://citron-emu.org
license=(GPL-2.0-or-later)
provides=('citron')
depends=('qt6-base' 'qt6-webengine' 'ffmpeg' 'sdl2-compat' 'hicolor-icon-theme' 'brotli' 'libusb' 'enet' 'opus' 'fmt' 'zydis' 'glibc' 'boost-libs' 'gcc-libs' 'lz4' 'openssl' 'zstd' 'libva' 'zlib' 'openal' 'speexdsp' 'discord-rpc-git' 'cubeb-git' 'cpp-httplib' 'cpp-jwt')
makedepends=('git' 'cmake' 'glslang' 'ninja' 'doxygen' 'nlohmann-json' 'vulkan-headers' 'boost' 'qt6-tools' 'qt6-multimedia-ffmpeg'  'qt6-multimedia' 'rapidjson' 'vulkan-headers' 'vulkan-utility-libraries' 'catch2' 'vulkan-memory-allocator-git' 'gamemode')
optdepends=('gamemode: Gamemoded support')
conflicts=('citron')
options=(!debug)
source=(citron::git+https://git.citron-emu.org/citron/emulator.git
        dynarmic::git+https://github.com/yuzu-mirror/dynarmic.git
