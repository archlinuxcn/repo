pkgname=julia-git-libarchive-git
pkgver=0.0.2.0.67.g4ca361a
pkgrel=2
pkgdesc="LibArchive.jl"
url="https://github.com/yuyichao/LibArchive.jl"
arch=('any')
license=('MIT')
makedepends=(git julia-pkg-scripts)
depends=(julia-git)
provides=(julia-git-libarchive-src)
source=(git+https://github.com/yuyichao/LibArchive.jl)
md5sums=('SKIP')

pkgver() {
  cd LibArchive.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd LibArchive.jl

  JULIA_INSTALL_SRCPKG=1 . /usr/lib/julia/julia-install-pkg.sh LibArchive "${pkgdir}" "${pkgname}" julia-git
}
