pkgname=julia-git-enzyme-src
pkgver=0.13.118
_commit=91c3f4f0394dab3713f8c0314f7c5dc49ca2f6e0
pkgrel=1
pkgdesc="Enzyme.jl"
url="https://github.com/EnzymeAD/Enzyme.jl.git"
arch=('any')
license=('MIT')
makedepends=(git julia-pkg-scripts)
depends=(julia-git)
source=("git+https://github.com/EnzymeAD/Enzyme.jl.git#commit=$_commit")
sha256sums=('5f0a66b2c8ee180e1f06b3f093b5a271a19a5fe240be50ed98b5c2baaa426988')

prepare() {
  cd Enzyme.jl

  sed -i 's/GlobalMethods/methodtable/g' src/rules/jitrules.jl
}

package() {
  cd Enzyme.jl

  JULIA_INSTALL_SRCPKG=1 . /usr/lib/julia/julia-install-pkg.sh Enzyme "${pkgdir}" "${pkgname}" julia-git
}
