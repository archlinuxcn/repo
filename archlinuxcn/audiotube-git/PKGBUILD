# Maintainer: Giuseppe Cal√† <gcala at mailbox dot org>

pkgname=audiotube-git
_pkgname="${pkgname%-git}"
pkgver=23.01.0.r309.g7fc52c7
pkgrel=1
pkgdesc="Client for YouTube Music"
arch=('x86_64' 'aarch64')
url="https://invent.kde.org/plasma-mobile/audiotube"
license=('GPL-2.0-or-later')
depends=('futuresql-qt6'
         'kcoreaddons'
         'kcrash'
         'ki18n'
         'kirigami-addons'
         'kwindowsystem'
         'purpose'
         'python'
         'python-ytmusicapi'
         'qt6-5compat'
         'qt6-base'
         'qt6-declarative'
         'qt6-imageformats'
         'qt6-multimedia'
         'qt6-svg'
         'yt-dlp')
makedepends=('git'
             'extra-cmake-modules'
             'pybind11'
             'qcoro-qt6')
provides=('audiotube')
conflicts=('audiotube')
source=("git+${url}.git")
sha256sums=('SKIP')

pkgver() {
	cd "${_pkgname}/"
	git describe --long --tags --abbrev=7 | sed 's/\([^-]*-g\)/r\1/;s/-/./g;s/v//'
}

build() {
	cd "${_pkgname}/"
	cmake -DCMAKE_INSTALL_PREFIX=/usr -B build
	make -C build
}

package() {
	cd "${_pkgname}/"
	make -C build DESTDIR="${pkgdir}" PREFIX=/usr install
}
