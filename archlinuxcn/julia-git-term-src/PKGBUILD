sha256sums=('627624fcf3e81a42012580227e31bf6280d252bf2ec417d745d6fff83abb27b5')

package() {
  cd Term.jl

  JULIA_INSTALL_SRCPKG=1 . /usr/lib/julia/julia-install-pkg.sh Term "${pkgdir}" "${pkgname}" julia-git
}
