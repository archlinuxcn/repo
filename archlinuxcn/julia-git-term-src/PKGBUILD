pkgname=julia-git-term-src
pkgver=2.0.8
_commit=8b89bd47b7c56ebd60bb995ce578f19aa8c82505
pkgrel=1
pkgdesc="Term.jl"
url="https://github.com/FedeClaudi/Term.jl.git"
arch=('any')
license=('MIT')
makedepends=(git julia-pkg-scripts)
depends=(julia-git)
