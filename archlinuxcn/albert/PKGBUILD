# Contributor: Felix Yan <felixonmars@archlinux.org>
# Contributor: Manuel Schneider  <manuelschneid3r at googles mail>

pkgname=albert
pkgver=0.31.1
pkgrel=1
pkgdesc="A sophisticated standalone keyboard launcher"
arch=('x86_64')
url="https://${pkgname}launcher.github.io"
license=('LicenseRef-Albert')
depends=(
	'libqalculate'
	'python'
	'python-pip'
	'qt6-base'
	'qt6-declarative'
	'qt6-5compat'
	'qt6-scxml'
	'qt6-shadertools'
	'qt6-svg'
	'qtkeychain-qt6'
)
makedepends=('cmake' 'qt6-tools')
source=("${pkgname}-${pkgver}.tar.gz::https://github.com/${pkgname}launcher/${pkgname}/releases/download/v${pkgver}/v${pkgver}.tar.gz")
sha512sums=('72febb2af8b18314000985796e05e3a87b1836c5c4726511f0e011ce584fb8d2278fc7d46094de81ed4640fd64682f0e94286b1105b30e1bb162866232201a60')

build() {
	cmake -B build \
		-S "${pkgname}" \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DCMAKE_FIND_PACKAGE_RESOLVE_SYMLINKS=ON \
		-DQHOTKEY_INSTALL=OFF

	cmake --build build
}

package() {
	DESTDIR="${pkgdir}" cmake --install build
	install -Dm644 "${pkgname}/LICENSE.md" -t "${pkgdir}/usr/share/licenses/${pkgname}/"
}
