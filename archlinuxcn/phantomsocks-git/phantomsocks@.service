[Unit]
Description=Phantomsocks Service for %i
After=network.target

[Service]
ExecStart=/usr/bin/phantomsocks-init --config /etc/phantomsocks/%i.json
User=phantomsocks
AmbientCapabilities=CAP_NET_RAW CAP_NET_BIND_SERVICE
CapabilityBoundingSet=CAP_NET_RAW CAP_NET_BIND_SERVICE
NoNewPrivileges=yes
Restart=on-abort

[Install]
WantedBy=multi-user.target
