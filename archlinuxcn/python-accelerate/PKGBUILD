optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=("$pkgname-$pkgver.tar.gz::$url/archive/refs/tags/v$pkgver.tar.gz")
noextract=()
sha512sums=('c388c9c6d2c788774e12f4b70a754cc31eef29ab836158d282bfa3c79cbfc6b62ac5fbfc43c51eb610cdeb3174552a63c2d950093984ea2b956b6e82e1149067')
validpgpkeys=()

build() {
    cd "$_name-$pkgver"
    python -m build --wheel --no-isolation
}

package() {
    cd "$_name-$pkgver"
    python -m installer --destdir="$pkgdir" dist/*.whl
}

