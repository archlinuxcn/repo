optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=("$pkgname-$pkgver.tar.gz::$url/archive/refs/tags/v$pkgver.tar.gz")
noextract=()
sha512sums=('c2189ca919639e27ef542f6699e75a7d09407c39eb72cab9785a5617844eb92c951a5fbb9ad0ed0f31fd92de96cd01a6ef327d1021827254ed4dda4cc608564f')
validpgpkeys=()

build() {
    cd "$_name-$pkgver"
    python -m build --wheel --no-isolation
}

package() {
    cd "$_name-$pkgver"
    python -m installer --destdir="$pkgdir" dist/*.whl
}

