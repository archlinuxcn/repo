optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=("$pkgname-$pkgver.tar.gz::$url/archive/refs/tags/v$pkgver.tar.gz")
noextract=()
sha512sums=('0c10fdf3a8f283f4625ec06009ebcbee8742e4744d54fe292c0a2e461fd343c91b1626594a6bd5a790782966a487f00ddd20de3709c7b9818746db274b7f8a97')
validpgpkeys=()

build() {
    cd "$_name-$pkgver"
    python -m build --wheel --no-isolation
}

package() {
    cd "$_name-$pkgver"
    python -m installer --destdir="$pkgdir" dist/*.whl
}

