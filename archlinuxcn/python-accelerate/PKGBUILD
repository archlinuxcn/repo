optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=("$pkgname-$pkgver.tar.gz::$url/archive/refs/tags/v$pkgver.tar.gz")
noextract=()
sha512sums=('a75ec97b8c6cefae031d8bdf9e7d1df64bb047682d3762c34f535ef1e5ddf9bf1bc3438ee362eb0b935180a70b82929b66bcd91cde331e80386f4776f4ae704a')
validpgpkeys=()

build() {
    cd "$_name-$pkgver"
    python -m build --wheel --no-isolation
}

package() {
    cd "$_name-$pkgver"
    python -m installer --destdir="$pkgdir" dist/*.whl
}

