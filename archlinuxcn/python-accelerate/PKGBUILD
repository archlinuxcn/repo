optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
source=("$pkgname-$pkgver.tar.gz::$url/archive/refs/tags/v$pkgver.tar.gz")
noextract=()
sha512sums=('aebdc3963fbc4d331bc8ed37b8769d13ec09cfe1f6b1607c83e2cc92903ef4e5ab6d3be5eb6e1007f3efa1a06e80e7a2d152e3180f2613baebcf1f787ac53139')
validpgpkeys=()

build() {
    cd "$_name-$pkgver"
    python -m build --wheel --no-isolation
}

package() {
    cd "$_name-$pkgver"
    python -m installer --destdir="$pkgdir" dist/*.whl
}

