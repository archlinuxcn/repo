pkgname=julia-git-optim-git
pkgver=1.3.0.0.3.ge439de4c
pkgrel=6
pkgdesc="Optim.jl"
url="https://github.com/JuliaOpt/Optim.jl"
arch=('any')
license=('MIT')
makedepends=(git julia-pkg-scripts)
depends=(julia-git)
provides=(julia-git-optim)
source=('git://github.com/JuliaOpt/Optim.jl')
md5sums=('SKIP')

pkgver() {
  cd Optim.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd Optim.jl

  . /usr/lib/julia/julia-install-pkg.sh Optim "${pkgdir}" "${pkgname}" julia-git
}
