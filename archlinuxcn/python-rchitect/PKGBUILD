# Maintainer: Butui Hu <hot123tea123@gmail.com>

_pkgname=rchitect
pkgname=python-rchitect
pkgver=0.4.9
pkgrel=1
pkgdesc='Interoperate R with Python'
arch=('x86_64')
url='https://github.com/randy3k/rchitect'
license=('MIT')
depends=(
  python-cffi
  python-six
)
makedepends=(
  python-pip
  python-setuptools
)

source=("${_pkgname}-${pkgver}.tar.gz::https://github.com/randy3k/rchitect/archive/refs/tags/v${pkgver}.tar.gz")
sha512sums=('972c2824d02ae15829c5e378ff77b119a924cb5c5eac7f9ee3cd278f711cf7eb73546358e18fa9a80e154059ef104278272697c7e11d1b55c67d4acdfd841e3e')

build() {
  cd "${_pkgname}-${pkgver}"
  python setup.py build
}

package() {
  cd "${_pkgname}-${pkgver}"
  python setup.py install --root="${pkgdir}" --optimize=1 --skip-build
  install -Dm644 LICENSE -t "${pkgdir}/usr/share/licenses/${pkgname}"
}
# vim:set ts=2 sw=2 et:
