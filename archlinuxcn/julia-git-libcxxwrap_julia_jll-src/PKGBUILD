pkgname=julia-git-libcxxwrap_julia_jll-src
pkgver=0.14.5+0
_commit=0fc8304ac01887305879623af24c4b55ec5a53e6
pkgrel=1
pkgdesc="libcxxwrap_julia_jll.jl"
url="https://github.com/JuliaBinaryWrappers/libcxxwrap_julia_jll.jl.git"
arch=('any')
license=('MIT')
makedepends=(git julia-pkg-scripts)
depends=(julia-git libcxxwrap_julia)
source=("git+https://github.com/JuliaBinaryWrappers/libcxxwrap_julia_jll.jl.git#commit=$_commit"
        jll.toml)
sha256sums=('a0903170a4344177e305ae4be401f9acc083f78ce2f357687e8169f6eb3b6b45'
            '060d7eaf22c63514773d0d8d19f74a26f5d880032716a51e082d3603483d08d9')

build() {
  cd libcxxwrap_julia_jll.jl

  julia /usr/lib/julia/julia-gen-jll.jl libcxxwrap_julia_jll ../jll.toml
}

package() {
  cd libcxxwrap_julia_jll.jl

  JULIA_INSTALL_SRCPKG=1 . /usr/lib/julia/julia-install-pkg.sh libcxxwrap_julia_jll "${pkgdir}" "${pkgname}" julia-git
}
