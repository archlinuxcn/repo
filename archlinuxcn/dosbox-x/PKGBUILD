# Maintainer: Coelacanthus <uwu@coelacanthus.name>
# Contributor: Mike Cuche <cuche AT mailbox.org>

pkgname=dosbox-x
pkgver=2025.02.01
pkgrel=1
pkgdesc="x86 emulator with builtin DOS, with patches with more features"
arch=(i686 x86_64 aarch64)
url="http://dosbox-x.com"
license=('GPL-2.0-or-later AND LGPL-2.0-or-later AND LGPL-2.1-or-later AND GPL-3.0-or-later')
depends=(
  'alsa-lib'
  'ffmpeg'
  'fluidsynth'
  'freetype2'
  'gcc-libs'
  'glibc'
  'hicolor-icon-theme'
  'libglvnd'
  'libpng'
  'libpcap'
  'libslirp'
  'libx11'
  'libxkbfile'
  'libxrandr'
  'sdl2'
  'sdl2_net'
  'zlib' 'libz.so'
)
makedepends=(
  glu
  nasm
)
conflicts=(dosbox-x-git)
source=(
  "https://github.com/joncampbell123/dosbox-x/archive/dosbox-x-v$pkgver.tar.gz"
)

sha256sums=('3a6fdfd659bb05db82bf2d850af806f666562cce9a37609fd33b59f7e4bd8fa4')

prepare() {
  cd "dosbox-x-dosbox-x-v$pkgver"
  autoreconf -fiv
}

build() {
  cd "dosbox-x-dosbox-x-v$pkgver"

  # FIXME: Workaround bug https://github.com/joncampbell123/dosbox-x/issues/3039
  export CFLAGS=${CFLAGS/-Werror=format-security/}
  export CXXFLAGS=${CXXFLAGS/-Werror=format-security/}

  ./configure \
    --prefix=/usr \
    --enable-sdl2 \
    --enable-xbrz \
    --enable-alsa-midi \
    --enable-avcodec
  make
}

package() {
  depends+=(
    'libasound.so'
    'libavcodec.so'
    'libavformat.so'
    'libavutil.so'
    'libswscale.so'
    'libfluidsynth.so'
    'libfreetype.so'
    'libpng16.so'
    'libpcap.so'
    'libslirp.so'
    'libz.so'
  )
  cd "dosbox-x-dosbox-x-v$pkgver"
  make DESTDIR="$pkgdir" install
}
# vim:set ts=2 sw=2 et:
