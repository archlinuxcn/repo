# Maintainer: Rocket Aaron <i at rocka dot me>
# Contributor: Dct Mei <dctxmei@yandex.com>

pkgname=yacd-meta
_pkgname=Yacd-meta
pkgver=0.3.8
pkgrel=1
pkgdesc="Yet Another Clash Dashboard"
arch=('any')
url="https://github.com/MetaCubeX/Yacd-meta"
license=('MIT')
makedepends=('pnpm')
source=("${url}/archive/v${pkgver}.tar.gz")
sha256sums=('0e7e72edb35b5da448d2d6a5c324e9d1d8ca354e1466692f93163208ea76a1a5')

build() {
    cd "${_pkgname}-${pkgver}"
    pnpm install
    pnpm build
}

package() {
    mkdir -p "${pkgdir}/usr/share"
    cp -r "${_pkgname}-${pkgver}/public" "${pkgdir}/usr/share/${pkgname}"
}
