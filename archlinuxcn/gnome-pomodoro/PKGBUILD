pkgname=gnome-pomodoro
pkgver=0.26.0
pkgrel=2
pkgdesc='A time management utility for GNOME based on the pomodoro technique!'
arch=('i686' 'x86_64')
url='https://github.com/gnome-pomodoro/gnome-pomodoro'
license=('GPL-3.0')
provides=(
  'libactions.so'
  'libdark-theme.so'
  'libgnome-pomodoro.so'
  'libgnome.so'
  'libsounds.so'
)
replaces=('gnome-shell-pomodoro')
conflicts=('gnome-shell-pomodoro')
depends=(
  'gnome-shell>=40.0'
  'hicolor-icon-theme'
  'glibc'
  'libglib-2.0.so'
  'libgobject-2.0.so'
  'libgio-2.0.so'
  'gtk3'
  'libcairo.so'
  'gobject-introspection'
  'libpeas-1.0.so'
  'gom'
  'gstreamer'
  'libcanberra.so'
  'libsqlite3.so'
)
makedepends=('meson' 'vala')
source=("$pkgname-$pkgver.tar.gz::https://github.com/gnome-pomodoro/gnome-pomodoro/archive/$pkgver.tar.gz")
sha256sums=('152022fb6a687f4f0c895d7673d398ffbc5467b0bcc90d638250337927a45312')

prepare() {
  cd "$srcdir/gnome-pomodoro-$pkgver"
}

build() {
  cd "$srcdir/gnome-pomodoro-$pkgver"
  arch-meson build
  meson compile -C build
}

package() {
  cd "$srcdir/gnome-pomodoro-$pkgver"
  meson install -C build --destdir "$pkgdir"
}

