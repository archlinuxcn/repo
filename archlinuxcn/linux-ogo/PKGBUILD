pkgbase=linux-ogo
pkgver=6.6.1.zen1
pkgrel=1
pkgdesc='Linux (own goal oh)'
arch=(x86_64)
url="https://github.com/zen-kernel/zen-kernel"
license=(GPL2)
makedepends=(
  bc
  cpio
  gettext
  libelf
  pahole
  perl
  python
  tar
  xz

  # htmldocs
  graphviz
  imagemagick
  python-sphinx
  texlive-latexextra
)
options=('!strip')
_srcname=linux-${pkgver%.*}
_srctag=v${pkgver%.*}-${pkgver##*.}
source=(
  https://cdn.kernel.org/pub/linux/kernel/v${pkgver%%.*}.x/${_srcname}.tar.{xz,sign}
  $url/releases/download/$_srctag/linux-$_srctag.patch.zst{,.sig}
  config  # the main kernel config file
)
# https://www.kernel.org/pub/linux/kernel/v6.x/sha256sums.asc
sha256sums=('da1ed7d47c97ed72c9354091628740aa3c40a3c9cd7382871f3cedbd60588234'
            'SKIP'
            'a1dc5a2301138c325fd78a23e50e96990bde676adb6c6aa22b346876955466bf'
            'SKIP'
            'e1d9664dc40b3b7be54b12c3051760a97f96193152641711c42b96b6e8ee2d24')
b2sums=('3bb35ba0386b00aa76dfd073e87b0d5a319d3116a80c39b11a3acd1219bc7d8b3809c1def24a3c4f52abc60f70c170a2f80d80c6b54459eec016c5ddc404c6fc'
        'SKIP'
        '098b65589a74830f64a35c528ddc355368c7c82331511e4d7d0db57e3bf5d06c695b76c71d9425c16fced3f5f25835b49f826f4e48a257ea2f77058a3541457f'
        'SKIP'
        '57aa700f1b2bffaf11a5b014cf83a1f705727ebea434a318d2c518a66493bdfd986ebaec5dd865aa25402c0e2d5e3245cbde956694d4e6c7a462ca10bb33955e')
validpgpkeys=(
  ABAF11C65A2970B130ABE3C479BE3E4300411886  # Linus Torvalds
  647F28654894E3BD457199BE38DBBDC86092693E  # Greg Kroah-Hartman
  A2FF3A36AAA56654109064AB19802F8B0D70FC30  # Jan Alexander Steffens (heftig)
