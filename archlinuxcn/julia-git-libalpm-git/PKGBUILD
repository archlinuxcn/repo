pkgname=julia-git-libalpm-git
pkgver=0.9.0.0.51.g2a02bb9
pkgrel=4
pkgdesc="LibALPM.jl"
url="https://github.com/yuyichao/LibALPM.jl"
arch=('any')
license=('MIT')
makedepends=(git julia-pkg-scripts)
depends=(julia-git pacman)
provides=(julia-git-libalpm-src)
source=(git+https://github.com/yuyichao/LibALPM.jl)
md5sums=('SKIP')

pkgver() {
  cd LibALPM.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd LibALPM.jl

  JULIA_INSTALL_SRCPKG=1 . /usr/lib/julia/julia-install-pkg.sh LibALPM "${pkgdir}" "${pkgname}" julia-git
  rm -rf "${dest_dir}"/travis
}
