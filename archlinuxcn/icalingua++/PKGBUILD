sha256sums_aarch64=('01e08cd199529196b663e02829498b9a438d68d47a10f7c2b239f82addf55141')
sha256sums_x86_64=('e230bfaabad202519c0478677131e609890234fb0e298ff0e104eb5cf6bfc061')
