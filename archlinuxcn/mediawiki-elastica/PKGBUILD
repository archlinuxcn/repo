_name=Elastica
pkgname=mediawiki-elastica
pkgver=20260213
pkgrel=1
pkgdesc="MediaWiki extension that provides base elasticsearch functionality"
arch=(any)
url="https://www.mediawiki.org/wiki/Extension:Elastica"
license=(''GPL'')
depends=('mediawiki>=1.45' 'mediawiki<1.46')
source=("$_name-$pkgver-$pkgrel.tar.gz::https://extdist.wmflabs.org/dist/extensions/Elastica-REL1_45-95694d8.tar.gz")
sha256sums=('03e414e94f78ac85879338cb7733d38f1fbdfb0286e2dcef7e5bcd3a56c8228a')

build() {
  true
}

package() {
  cd "$srcdir"
  mkdir -p "$pkgdir/usr/share/webapps/mediawiki/extensions/"
  cp -ar $_name "$pkgdir/usr/share/webapps/mediawiki/extensions/"
}
