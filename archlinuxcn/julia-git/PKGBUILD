            USE_SYSTEM_LIBBLASTRAMPOLINE=1
            USE_SYSTEM_UTF8PROC=1
            USE_SYSTEM_OPENSSL=1
            USE_SYSTEM_LIBSSH2=1
            USE_SYSTEM_NGHTTP2=1
