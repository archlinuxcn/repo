pkgbase=ttf-adobe-source-han-sans-cjk-variables
pkgname=(ttf-adobe-source-han-sans-{cn,hk,tw,jp,kr}-variables)
pkgver=2.005R
pkgrel=2
url="https://github.com/adobe-fonts/source-han-sans"
license=('OFL-1.1')
arch=("any")
source=("https://github.com/adobe-fonts/source-han-sans/releases/download/$pkgver/02_SourceHanSans-VF.zip")
sha256sums=('e5944ea7253878409232f1ffad464e9e93879c0207eaf2960bba327eef89ed81')

package_ttf-adobe-source-han-sans-cn-variables() {
    pkgdesc="Adobe Source Han Sans Subset TTF - Simplified Chinese TrueType fonts"

    install -Dm644 "$srcdir"/Variable/TTF/Subset/SourceHanSansCN-VF.ttf -t "$pkgdir"/usr/share/fonts/adobe-source-han
    install -vDm644 "${srcdir}/LICENSE.txt" -t "${pkgdir}/usr/share/licenses/${pkgname}/"
}

package_ttf-adobe-source-han-sans-hk-variables() {
    pkgdesc="Adobe Source Han Sans Subset TTF - Traditional Chinese (Hong Kong) TrueType fonts"

    install -Dm644 "$srcdir"/Variable/TTF/Subset/SourceHanSansHK-VF.ttf -t "$pkgdir"/usr/share/fonts/adobe-source-han
    install -vDm644 "${srcdir}/LICENSE.txt" -t "${pkgdir}/usr/share/licenses/${pkgname}/"
}

