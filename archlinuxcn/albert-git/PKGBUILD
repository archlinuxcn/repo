	"git+${url}/${_pkgname}-plugin-menubar.git"
	"git+${url}/${_pkgname}-plugin-mpris.git"
	"git+${url}/${_pkgname}-plugin-path.git"
	"git+${url}/${_pkgname}-plugin-python.git"
	"git+${url}/${_pkgname}-plugin-snippets.git"
