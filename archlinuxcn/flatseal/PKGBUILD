# Maintainer: Martin Rys <https://rys.rs/contact>
# Contributor: Hugo Osvaldo Barrera <hugo@barrera.io>

_pkgname=Flatseal
pkgname=flatseal
pkgver=2.4.0
pkgrel=3
pkgdesc='A permissions manager for Flatpak'
url="https://github.com/tchx84/Flatseal/"
arch=('any')
license=('GPL-3.0-or-later')
depends=('flatpak' 'gjs' 'webkitgtk-6.0' 'appstream' 'libadwaita')
makedepends=('meson' 'ninja' git)
source=("source::git+https://github.com/tchx84/Flatseal.git#tag=v${pkgver}")
sha256sums=('3d174fe45a92ac638dc0a1b7f2f86179ecafd86e6816dd04c216b6c86eafdfc3')

build() {
	cd "${srcdir}/source"
	meson setup --prefix /usr --buildtype=plain . build
}

package() {
	cd "${srcdir}/source"
	DESTDIR="${pkgdir}" meson install -C build
}
