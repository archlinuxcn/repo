_pkgname=krita
pkgname="${_pkgname}-git"
pkgver=5.3.0.20250716.030022
pkgrel=1
pkgdesc="A professional free and open source painting program (git version)"
arch=('x86_64')
url="https://invent.kde.org/graphics/${_pkgname}"
license=('GPL-3.0-only')
depends=(
    'exiv2'
    'ffmpeg'
    'fftw'
    'fontconfig'
    'freetype2'
    'fribidi'
    'gcc-libs'
    'giflib'
    'glibc'
    'gsl'
    'harfbuzz'
    'imath'
    'kcolorscheme'
    'kcompletion'
    'kconfig'
    'kcoreaddons'
    'kcrash'
    'kguiaddons'
    'ki18n'
    'kitemmodels'
    'kitemviews'
    'kwidgetsaddons'
    'kwindowsystem'
    'lcms2'
    'libjpeg-turbo'
    'libkdcraw5'
    'libpng'
    'libtiff'
    'libunibreak'
    'libwebp'
    'libx11'
    'mlt'
    'opencolorio'
    'openexr'
    'openjpeg2'
    'qt6-base'
    'qt6-svg'
    'quazip-qt6'
    'zlib'
)
makedepends=(
    'boost'
    'eigen'
    'extra-cmake-modules'
    'git'
    'immer'
    'kdoctools'
    'kseexpr-qt6'
    'lager'
    'libheif'
    'libjxl'
    'libmypaint'
    'poppler-qt6'
    'python-pyqt6'
    'qt6-tools'
    'sip'
    'xsimd'
    'zug'
)
optdepends=(
    'kimageformats5: PSD support'
    'krita-plugin-gmic: GMic plugin'
    'kseexpr-qt6: SeExpr generator layer'
    'libheif: HEIF filter'
    'libjxl: JPEG-XL filter'
    'libmypaint: support for MyPaint brushes'
    'poppler-qt6: PDF filter'
    'python-legacy-cgi: for the Python plugins'
    'python-pyqt6: for the Python plugins'
)
provides=(
    "${_pkgname}=${pkgver}"
)
conflicts=(
    'calligra-krita'
    'krita'
    'krita-il10n'
)
source=("${_pkgname}::git+${url}.git")
sha256sums=('SKIP')

pkgver() {
    cd "${srcdir}/${_pkgname}"
    version="$(git describe --tags --abbrev=0 | sed 's/^v//;s/-.*//')"
    [[ "${version}" =~ ^[0-9]+\.[0-9]+\.[0-9]+$ ]] || exit 1
    printf "%s.%s" "${version}" "$(TZ=UTC git log -1 --pretty='%cd' --date=format-local:%Y%m%d.%H%M%S)"
}

build() {
    cd "${srcdir}/${_pkgname}"
    cmake -S . -B build \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_INSTALL_LIBDIR=lib \
        -DBUILD_TESTING=OFF \
        -DBUILD_WITH_QT6=ON \
        -DBUILD_KRITA_QT_DESIGNER_PLUGINS=ON
    cmake --build build --clean-first
}

package() {
    cd "${srcdir}/${_pkgname}"
    DESTDIR="${pkgdir}" cmake --install build
}
