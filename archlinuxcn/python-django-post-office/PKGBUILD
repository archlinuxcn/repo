_name=django-post-office
pkgname=python-django-post-office
pkgver=3.7.1
pkgrel=1
pkgdesc="A Django app to monitor and send mail asynchronously, complete with template support."
arch=(any)
url="https://github.com/ui/django-post_office"
license=('MIT')
depends=('python-django-jsonfield')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/django-post_office-3.7.1.tar.gz")
sha256sums=('b34402b2fba61125f17c6d0ce479e6dede6585ce7cd6bbb5b85e320384e63c49')

build() {
  cd "$srcdir/django-post_office-3.7.1"
  python3 setup.py build
}

package() {
  cd "$srcdir/django-post_office-3.7.1"
  python3 setup.py install --root=$pkgdir --optimize=1 --skip-build

  # make sure we don't install any world-writable or root-readable-only files
  # we shouldn't need to fix ownership as we extract tarballs as a non-root user
  # https://github.com/pypa/setuptools/issues/1328
  # https://github.com/LonamiWebs/Telethon/issues/1605
  chmod u=rwX,go=rX -R "$pkgdir"
  # make sure we don't install annoying files
  local _site_packages=$(python -c "import site; print(site.getsitepackages()[0])")
  rm -rf "$pkgdir/$_site_packages/tests/"
}

