pkgname=julia-git-codecxz-git
pkgver=0.7.0
pkgrel=3
pkgdesc="CodecXZ.jl"
url="https://github.com/JuliaIO/CodecXZ.jl"
arch=('any')
license=('MIT')
makedepends=(git julia-pkg-scripts)
depends=(julia-git)
provides=(julia-git-codecxz)
source=(git://github.com/JuliaIO/CodecXZ.jl)
md5sums=('SKIP')

pkgver() {
  cd CodecXZ.jl

  git describe --tags | sed -e 's/^[^0-9]*//' -e 's/-/.0./' -e 's/-/./g'
}

package() {
  cd CodecXZ.jl

  . /usr/lib/julia/julia-install-pkg.sh CodecXZ "${pkgdir}" "${pkgname}" julia-git
}
