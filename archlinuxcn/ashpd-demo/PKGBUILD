pkgname=ashpd-demo
pkgver=0.5.0
epoch=1
pkgrel=3
pkgdesc='asph-demo'
arch=('x86_64')
url='https://github.com/bilelmoussaoui/ashpd'
license=('MIT')
depends=('gtk4' 'libadwaita' 'libshumate' xdg-desktop-portal)
makedepends=('git' 'ninja' 'meson' 'rust' libpipewire clang)
source=("git+https://github.com/bilelmoussaoui/ashpd.git#tag=${pkgver}")
sha256sums=('516861a5325317814a8758bf4181eb0d722418f5ddc22e03f9a30fad02642eba')

build() {
  cd ashpd/ashpd-demo
  meson setup \
    -Dprefix=/usr \
    -Dbuildtype=release \
    build
  ninja -C build
}

package() {
  cd ashpd/ashpd-demo
  DESTDIR="$pkgdir" ninja -C build install
}
