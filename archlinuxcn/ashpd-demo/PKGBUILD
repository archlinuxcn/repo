pkgname=ashpd-demo
pkgver=0.12.2
epoch=1
pkgrel=1
pkgdesc='asph-demo'
arch=('x86_64')
url='https://github.com/bilelmoussaoui/ashpd'
license=('MIT')
depends=('gtk4' 'libadwaita' 'libshumate' xdg-desktop-portal)
makedepends=('git' 'ninja' 'meson' 'rust' libpipewire clang)
source=("git+https://github.com/bilelmoussaoui/ashpd.git#tag=${pkgver}")
sha256sums=('4ccb39809e3b6c2ca2bcd3bf376a816e68c80d2d48e6611197dad613a7442df0')

build() {
  cd ashpd/ashpd-demo
  meson setup \
    -Dprefix=/usr \
    -Dbuildtype=release \
    build
  ninja -C build
}

package() {
  cd ashpd/ashpd-demo
  DESTDIR="$pkgdir" ninja -C build install
}
