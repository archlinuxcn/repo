pkgname=ashpd-demo
pkgver=0.12.1
epoch=1
pkgrel=2
pkgdesc='asph-demo'
arch=('x86_64')
url='https://github.com/bilelmoussaoui/ashpd'
license=('MIT')
depends=('gtk4' 'libadwaita' 'libshumate' xdg-desktop-portal)
makedepends=('git' 'ninja' 'meson' 'rust' libpipewire clang)
source=("git+https://github.com/bilelmoussaoui/ashpd.git#tag=${pkgver}")
sha256sums=('8cdb73647d50479d1d8ed2e224c4457e3dda61427280e01a8ed5281e1a2a7fa5')

build() {
  cd ashpd/ashpd-demo
  meson setup \
    -Dprefix=/usr \
    -Dbuildtype=release \
    build
  ninja -C build
}

package() {
  cd ashpd/ashpd-demo
  DESTDIR="$pkgdir" ninja -C build install
}
