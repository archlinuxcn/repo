pkgname=ashpd-demo
pkgver=0.12.0
epoch=1
pkgrel=4
pkgdesc='asph-demo'
arch=('x86_64')
url='https://github.com/bilelmoussaoui/ashpd'
license=('MIT')
depends=('gtk4' 'libadwaita' 'libshumate' xdg-desktop-portal)
makedepends=('git' 'ninja' 'meson' 'rust' libpipewire clang)
source=("git+https://github.com/bilelmoussaoui/ashpd.git#tag=${pkgver}")
sha256sums=('82084ddc556082d33161c8ac92d7d86ea3585c879fd76b04ea930db014f78bef')

build() {
  cd ashpd/ashpd-demo
  meson setup \
    -Dprefix=/usr \
    -Dbuildtype=release \
    build
  ninja -C build
}

package() {
  cd ashpd/ashpd-demo
  DESTDIR="$pkgdir" ninja -C build install
}
