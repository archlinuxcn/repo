    $pkgbase-$pkgver-EarlySummerSerifSTVF.zip::$url/releases/download/$pkgver/EarlySummerSerifSTVF.zip
    $pkgbase-$pkgver-EarlySummerSerifTTF.zip::$url/releases/download/$pkgver/EarlySummerSerifTTF.zip
