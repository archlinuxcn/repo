url='https://github.com/GuiWonder/EarlySummerSerif'
arch=('any')
license=('OFL-1.1')
source=(
    $pkgbase-$pkgver-EarlySummerSerifOTF.zip::$url/releases/download/$pkgver/EarlySummerSerifOTF.zip
    $pkgbase-$pkgver-EarlySummerSerifOTFTTC.zip::$url/releases/download/$pkgver/EarlySummerSerifOTFTTC.zip
    $pkgbase-$pkgver-EarlySummerSerifScreen.zip::$url/releases/download/$pkgver/EarlySummerSerifScreen.zip
    $pkgbase-$pkgver-EarlySummerSerifScreenTTC.zip::$url/releases/download/$pkgver/EarlySummerSerifScreenTTC.zip
    $pkgbase-$pkgver-EarlySummerSerifSTOTF.zip::$url/releases/download/$pkgver/EarlySummerSerifSTOTF.zip
    $pkgbase-$pkgver-EarlySummerSerifSTScreen.zip::$url/releases/download/$pkgver/EarlySummerSerifSTScreen.zip
    $pkgbase-$pkgver-EarlySummerSerifSTTTF.zip::$url/releases/download/$pkgver/EarlySummerSerifSTTTF.zip
    $pkgbase-$pkgver-EarlySummerSerifSTVF.zip::$url/releases/download/$pkgver/EarlySummerSerifSTVF.zip
    $pkgbase-$pkgver-EarlySummerSerifTTF.zip::$url/releases/download/$pkgver/EarlySummerSerifTTF.zip
