package_otf-early-summer-serif() {
    install -Dm644 -t "$pkgdir/usr/share/fonts/OTF/$pkgname" EarlySummerSerif-*.otf
    rm -f "$pkgdir/usr/share/fonts/OTF/$pkgname"/*-Screen.*
    rm -f "$pkgdir/usr/share/fonts/OTF/$pkgname"/*-VF.*
    install -Dm644 -t "$pkgdir/usr/share/licenses/$pkgname" LICENSE.txt
}
package_ttf-early-summer-serif() {
    install -Dm644 -t "$pkgdir/usr/share/fonts/TTF/$pkgname" EarlySummerSerif-*.ttf
    rm -f "$pkgdir/usr/share/fonts/OTF/$pkgname"/*-Screen.*
    rm -f "$pkgdir/usr/share/fonts/OTF/$pkgname"/*-VF.*
    install -Dm644 -t "$pkgdir/usr/share/licenses/$pkgname" LICENSE.txt
}
