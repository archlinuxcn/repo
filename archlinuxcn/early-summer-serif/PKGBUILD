pkgname=(
    otf-early-summer-serif
    ttf-early-summer-serif
    otf-early-summer-serif-st
    ttf-early-summer-serif-st
    otf-early-summer-serif-vf
    ttf-early-summer-serif-vf
    otf-early-summer-serif-st-vf
    ttf-early-summer-serif-st-vf
