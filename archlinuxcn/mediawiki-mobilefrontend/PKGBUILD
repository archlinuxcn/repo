_name=MobileFrontend
pkgname=mediawiki-mobilefrontend
pkgver=20260213
pkgrel=1
pkgdesc="MediaWiki extension that provides a mobile-friendly view"
arch=(any)
url="https://www.mediawiki.org/wiki/Extension:MobileFrontend"
license=(''GPL'')
depends=('mediawiki>=1.45' 'mediawiki<1.46')
source=("$_name-$pkgver-$pkgrel.tar.gz::https://extdist.wmflabs.org/dist/extensions/MobileFrontend-REL1_45-35c9972.tar.gz")
sha256sums=('8718e0a508438e19a9ab5fa90ee16db5648f2291b84d640467a75801fb32827e')

build() {
  true
}

package() {
  cd "$srcdir"
  mkdir -p "$pkgdir/usr/share/webapps/mediawiki/extensions/"
  cp -ar $_name "$pkgdir/usr/share/webapps/mediawiki/extensions/"
}
