pkgname=julia-git-ordinarydiffeq-src
pkgver=6.99.0
_commit=fb6fa94bb909c20ca7d294bc8d6896c59fc5db48
pkgrel=1
pkgdesc="OrdinaryDiffEq.jl"
url="https://github.com/SciML/OrdinaryDiffEq.jl.git"
arch=('any')
license=('MIT')
makedepends=(git julia-pkg-scripts)
depends=(julia-git)
source=("git+https://github.com/SciML/OrdinaryDiffEq.jl.git#commit=$_commit")
sha256sums=('06f54b5e04b07971dc01341dbc113e3bb0547ff3291e39f6cd2af306d77d9651')

package() {
  cd OrdinaryDiffEq.jl

  rm -rf lib/

  JULIA_INSTALL_SRCPKG=1 . /usr/lib/julia/julia-install-pkg.sh OrdinaryDiffEq "${pkgdir}" "${pkgname}" julia-git
}
