pkgname=julia-git-clang-src
pkgver=0.19.0
_commit=aa6520c13b025cf88a5576ad4b83567084b81ff4
pkgrel=1
pkgdesc="Clang.jl"
url="https://github.com/JuliaInterop/Clang.jl.git"
arch=('any')
license=('MIT')
makedepends=(git julia-pkg-scripts)
depends=(julia-git)
source=("git+https://github.com/JuliaInterop/Clang.jl.git#commit=$_commit"
        0001-Support-Clang-20.patch
        0001-Generate-wrappers-for-clang-21.patch)
sha256sums=('30f34efe64750c02e093f6dc22ad2030863eba1ba0d4f77e303be8e2cf10de4b'
            '1e7863313459af9aa036dad9e50e07545147ef9796b112efbbd8cb1cb59d69d5'
            'b8cc199c43f0ae47b7de568050bcf5aaf1bc775949a645974f86a96e7c1bec33')

prepare() {
  cd Clang.jl

  patch -Np1 --no-backup-if-mismatch < "../0001-Support-Clang-20.patch"
  patch -Np1 --no-backup-if-mismatch < "../0001-Generate-wrappers-for-clang-21.patch"
}

package() {
  cd Clang.jl

  JULIA_INSTALL_SRCPKG=1 . /usr/lib/julia/julia-install-pkg.sh Clang "${pkgdir}" "${pkgname}" julia-git
}
