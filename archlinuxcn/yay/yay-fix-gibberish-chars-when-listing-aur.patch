+// gzipReadCloser wraps a gzip.Reader and the original Closer to ensure
+// the underlying network connection is closed when we are done reading.
+type gzipReadCloser struct {
+	*gzip.Reader
+	originalCloser io.Closer
+}
+
+// Close ensures we close the gzip reader (to flush buffers) AND the network socket.
+func (g *gzipReadCloser) Close() error {
+	gzErr := g.Reader.Close()
+	bodyErr := g.originalCloser.Close()
+
+	if gzErr != nil {
+		return gzErr
+	}
+	return bodyErr
+}
