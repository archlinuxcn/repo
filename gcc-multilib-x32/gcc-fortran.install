infodir=usr/share/info
file="gfortran.info"

post_install() {
  [ -x usr/bin/install-info ] || return 0
  install-info $infodir/$file.gz $infodir/dir 2> /dev/null
}

post_upgrade() {
  post_install $1
}

pre_remove() {
  [ -x usr/bin/install-info ] || return 0
  install-info --delete $infodir/$file.gz $infodir/dir 2> /dev/null
}
