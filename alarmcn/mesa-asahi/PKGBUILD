pkgbase=mesa
pkgname=(
  mesa
  opencl-mesa
  vulkan-asahi
  vulkan-broadcom
  vulkan-dzn
  vulkan-freedreno
  vulkan-gfxstream
  vulkan-intel
  vulkan-nouveau
  vulkan-panfrost
  vulkan-radeon
  vulkan-swrast
  vulkan-virtio
  vulkan-mesa-layers
)
pkgver=25.2.2
pkgrel=1
epoch=1
pkgdesc="Open-source OpenGL drivers"
url="https://www.mesa3d.org/"
arch=(aarch64 x86_64)
license=("MIT AND BSD-3-Clause AND SGI-B-2.0")
makedepends=(
  clang
  directx-headers
  expat
  gcc-libs
  glibc
  libdrm
  libelf
  libglvnd
  libpng
  libva
  libvdpau
