# Maintainer: Integral <integral@member.fsf.org>

pkgname=avbroot
pkgver=3.21.0
pkgrel=1
pkgdesc="Tool for manipulating and re-signing Android A/B OTAs"
arch=('x86_64' 'aarch64' 'riscv64')
url="https://github.com/chenxiaolong/${pkgname}"
license=('GPL-3.0-or-later')
makedepends=('cargo')
source=("${pkgname}-${pkgver}.tar.gz::${url}/archive/refs/tags/v${pkgver}.tar.gz")
sha256sums=('c4f9160204b2f9b74d832bda1db56f86f74e4b80a1f384e493be59b3e462a475')

prepare() {
	cd "${pkgname}-${pkgver}/"
	cargo fetch --locked --target "$(rustc -vV | sed -n 's/host: //p')"
}

build() {
	cd "${pkgname}-${pkgver}/"
	CFLAGS+=" -ffat-lto-objects" cargo build --frozen --release --all-features
}

package() {
	cd "${pkgname}-${pkgver}/"
	install -Dm755 "target/release/${pkgname}" -t "${pkgdir}/usr/bin/"
	install -Dm644 README.md -t "${pkgdir}/usr/share/doc/${pkgname}/"
}
