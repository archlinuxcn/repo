if [[ $CARCH != x86_64 ]]; then
  BUILD_DOC=0
fi

if ((BUILD_DOC)); then
  pkgname+=('julia-git-docs')
fi

case "$CARCH" in
  x86_64)
    _soarch=64
    ;;
  i686)
    _soarch=32
    ;;
  aarch64)
    _soarch=64
    ;;
  armv7h)
    _soarch=32
    ;;
esac

