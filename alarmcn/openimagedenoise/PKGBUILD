pkgname=openimagedenoise
pkgver=2.4.0
pkgrel=1
pkgdesc='Intel(R) Open Image Denoise library'
arch=(aarch64)
url='https://openimagedenoise.github.io'
license=('Apache-2.0')
depends=('intel-tbb')
makedepends=('cmake' 'ninja' 'ispc' 'python')
source=("https://github.com/OpenImageDenoise/oidn/releases/download/v${pkgver}/oidn-${pkgver}.src.tar.gz")
sha512sums=('900671b78c0e45cf6fb07aa03c9a176757347ac451ef0791979b4d703442c54467302cefd1a89511874f9897bf901c620f4c011535ff48eaad83e703e8ba7180')

build() {
  cd oidn-$pkgver

  export CXXFLAGS+=" -fcf-protection=none"

  cmake \
    -B build \
    -G Ninja \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DOIDN_DEVICE_CUDA=OFF \
    -DOIDN_DEVICE_HIP=OFF \
    -DCMAKE_BUILD_TYPE=Release
  ninja -C build
}

package() {
  cd oidn-$pkgver
  DESTDIR="$pkgdir" ninja -C build install
}
