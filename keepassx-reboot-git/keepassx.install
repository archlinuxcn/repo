post_install() {
  update-mime-database /usr/share/mime 1> /dev/null
  update-desktop-database -q
  xdg-icon-resource forceupdate --theme hicolor
}

post_upgrade() {
  post_install $1
}

pre_remove() {
  /bin/true
}

post_remove() {
  update-mime-database /usr/share/mime 1> /dev/null
  update-desktop-database -q
  xdg-icon-resource forceupdate --theme hicolor
}
