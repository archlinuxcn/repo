# Maintainer: aimileus < $(echo YWltaWxpdXNAcHJvdG9ubWFpbC5jb20K | base64 -d) 
pkgname=vita3k-git
_pkgname=vita3k
pkgver=r687.ebee18e
pkgrel=1
pkgdesc="PlayStation Vita emulator"
arch=('x86_64')
url="https://vita3k.github.io/"
license=('GPL2')
depends=('unicorn' 'sdl2' 'boost-65-compat')
makedepends=('git' 'cmake' 'boost')
provides=('vita3k')
conflicts=('vita3k')
_submodules=(
  "serge1/ELFIO"
  "aquynh/capstone"
  "vitasdk/vita-headers"
  "jbeder/yaml-cpp"
  "cginternals/glbinding"
  "vitasdk/vita-toolchain"
  "jonasmr/microprofile"
  "tcbrindle/sdl2-cmake-scripts"
  "gabime/spdlog.git"
  "tronkko/dirent"
  "B-Con/crypto-algorithms"
  "ocornut/imgui"
  "google/googletest"
  "Vita3K/shaders-db"
  "KhronosGroup/glslang"
  "KhronosGroup/SPIRV-Cross"
  "Vita3K/ext-boost"
  "Vita3K/dlmalloc"
)
source=(
  "git+https://github.com/vita3k/vita3k.git"
)

md5sums=('SKIP'
         'SKIP')

for _subm in $_submodules; do
source+=("git+https://github.com/${_subm}.git")
md5sum+=('SKIP')
done

pkgver() {
	cd "$_pkgname"
	printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

prepare() {
	cd "$_pkgname"
	git submodule init
        for _subm in $_submodules; do
	    git config "submodule.src/external/$(basename $_subm).url" "$srcdir/$(basename $_subm)"
        done
	git submodule update
}

build() {
	cd "$_pkgname"
	msg2 "Create build"
	mkdir -p build && cd build
	msg2 "Create cmake"
	cmake -DCMAKE_INSTALL_PREFIX=/usr ..
	make
}

package() {
	cd $_pkgname
	install -Dm755 build/bin/Vita3K "$pkgdir/opt/vita3k/vita3k"
	install -Dm644 build/bin/shaders/* -t "$pkgdir/opt/vita3k/shaders"
	echo -e "#!/bin/sh\nexec /opt/vita3k/vita3k \$@" >"vita3k.sh"
	install -Dm755 vita3k.sh "$pkgdir/usr/bin/vita3k"
	chmod 755 "$pkgdir/usr/bin/vita3k"
}
