# Maintainer: Youmu <condy0919 at gmail dot com>

pkgname=universal-ctags-git
pkgver=r6216.f4be7435
pkgrel=1
pkgdesc="multilanguage reimplementation of the Unix ctags utility"
arch=('x86_64' 'i686')
url="http://ctags.io/"
license=('GPL')
depends=('bash')
makedepends=('git' 'python-docutils')
# python-docutils is for manpages
provides=('ctags')
conflicts=('ctags')
source=("git://github.com/universal-ctags/ctags.git")
noextract=()
md5sums=('SKIP')

_gitname=ctags

pkgver() {
  cd "$srcdir/$_gitname"
    printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cd "$srcdir"

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  ./autogen.sh
  ./configure --prefix=/usr \
    --libexecdir=/usr/lib \
    --sysconfdir=/etc
  make
}

package() {
  cd "$srcdir/$_gitname-build"
  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
