# Maintainer: lilydjwg <lilydjwg@gmail.com>

pkgname=cargo-nightly
pkgver=0.24.0_20171104
pkgrel=1
epoch=1
pkgdesc="A safe, concurrent, practical language from Mozilla (nightly version)"
arch=('i686' 'x86_64')
url="https://crates.io/"
license=('MIT' 'Apache')
validpgpkeys=('108F66205EAEB0AAA8DD5E1C85AB96E6FA1BE5FE')
source=(https://static.rust-lang.org/dist/2017-11-07/cargo-nightly-x86_64-unknown-linux-gnu.tar.xz https://static.rust-lang.org/dist/2017-11-07/cargo-nightly-x86_64-unknown-linux-gnu.tar.xz.asc)
sha256sums=(dda6717ce3b9d8ae6271bc6ec1f3e45f5a15ed1759807e0bc4b6941b843b1d10 SKIP)

build() {
  true
}

package() {
  pkgdesc="Rust package manager"
  provides=(cargo=0.24.0)
  conflicts=('cargo' 'cargo-git')
  replaces=('cargo-git')

  cd cargo-nightly-$CARCH-unknown-linux-gnu/cargo
  mkdir -p "$pkgdir/usr"
  for f in *; do
    if [[ $f == manifest.in ]]; then
      continue
    elif [[ $f == etc ]]; then
      cp -r $f "$pkgdir/"
      continue
    fi
    cp -r $f "$pkgdir/usr"
  done
  rm -r "$pkgdir/usr/share/doc"
}

